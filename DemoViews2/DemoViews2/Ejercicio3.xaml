<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="DemoViews2.Ejercicio3">
  <StackLayout>
  <BoxView x:Name="boxColor"
           BackgroundColor="Black"
           HeightRequest="300"
           />
       <Label Margin="25,30,0,0"
       Text="Rojo"
              />
        <Slider x:Name="silROJO"
                Margin="15,0,0,0"
                ValueChanged="CambiarColor"/>
        <Label Margin="25,30,0,0"
               Text="Azul"/>
         <Slider x:Name="silAZUL"
                Margin="15,0,0,0"
                ValueChanged="CambiarColor"/>
        <Label Margin="25,30,0,0"
               Text="Verde"/>
        <Slider x:Name="silVERDE"
                Margin="15,0,0,0"
                ValueChanged="CambiarColor"/>
        <Label x:Name="lbDisplay"
               Text="Valor Hexadecimal"
               FontAttributes="Bold"
               FontSize="Large"/>
        
    </StackLayout>
</ContentPage>
